{
  "manifest_version": 2,
  "name": "Web Tools",
  "version": "1.0",
  "icons": {
    "16": "icon/16.png",
    "128": "icon/128.png"
  },
  "browser_action": {
    "default_title": "Web Tools",
    "default_icon": "icon/128.png"
  },
  "content_scripts": [
    {
      "css": ["content/content.css"],
      "js": [
        "lib/leaf.js",
        "lib/jquery.min.js",
        "content/cookie.js",
        "content/drag_search.js",
        "content/json.js"
      ],
      "all_frames": false,
      "matches": ["http://*/*", "https://*/*"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "scripts": ["background/background.js"]
  },
  "web_accessible_resources": ["*"],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "permissions": [
    "*://*/*",
    "cookies",
    "tabs",
    "contextMenus",
    "webRequestBlocking",
    "webRequest"
  ]
}
